[System.Serializable]
public class CustomMascot {
    public string name;
    public Sprite bodySprite;
    public Sprite accessorySprite;
    public MascotMood defaultMood;
    public string potionAffinity; // e.g. "Grease", "Ghost", "Luck"
    public string voicePack; // e.g. "Vintage", "Synthwave", "Haunted"
}
